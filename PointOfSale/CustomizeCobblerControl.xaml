<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label>Costomize Cobbler</Label>
        <StackPanel>
            <RadioButton IsChecked="True" Checked="Blueberry_Checked">Blueberry</RadioButton>
            <RadioButton Checked="Cherry_Checked">Cherry</RadioButton>
            <RadioButton Checked="Peach_Checked">Peach</RadioButton>
        </StackPanel>

        <CheckBox Content="With Ice Cream" IsChecked="{Binding Path=WithIceCream}"/>
    </StackPanel>
</UserControl>
